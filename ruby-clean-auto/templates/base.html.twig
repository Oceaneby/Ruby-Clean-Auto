<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<title>
			{% block title %}Auto Ruby Clean!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"/>

		{# ✅ CSS via Webpack Encore #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body
		class="min-h-screen flex flex-col">
		{# ✅ NAVBAR #}
		<nav
			class="navbar bg-gray-900 shadow-md flex items-center h-40">
			<!-- Logo collé à gauche -->
			<div class="px-10 mt-2">
				<img src="{{ asset('images/Logo-Charly-removebg-preview.webp') }}" alt="Logo" class="h-40 w-auto"/>
			</div>

			<!-- Conteneur centré qui prend le reste de la largeur -->
			<div
				class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<!-- Liens alignés à droite -->
				<div class="hidden md:flex justify-end items-center space-x-20 h-44">
					<a href="#" class="text-white hover:text-red-500 rounded-md text-2xl font-medium">Accueil</a>
					<a href="#" class="text-white hover:text-red-500 rounded-md text-2xl font-medium">Formules Intérieurs</a>
					<a href="#" class="text-white hover:text-red-500 rounded-md text-2xl font-medium">Formules Extérieurs</a>
					<a href="#" class="text-white hover:text-red-500 rounded-md text-2xl font-medium">Encore plus</a>
					<a href="#" class="text-white hover:text-red-500 rounded-md text-2xl font-medium">Galeries</a>
					<a href="#" class="text-white hover:text-red-500 rounded-md text-2xl font-medium">Contact</a>
				</div>
			</div>

			<!-- Mobile menu button -->
			<div class="md:hidden px-4">
				<button id="mobile-menu-button" type="button" class="inline-flex items-center justify-center p-2 rounded-md text-white hover:text-red-400 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-red-600" aria-controls="mobile-menu" aria-expanded="false">
					<span class="sr-only">Ouvrir le menu</span>
					<!-- Icone hamburger -->
					<svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
					</svg>
					<!-- Icone croix -->
					<svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
					</svg>
				</button>
			</div>
		</nav>

		<!-- Mobile menu -->
		<div class="hidden md:hidden" id="mobile-menu">
			<div class="px-2 pt-2 pb-3 space-y-1">
				<a href="#" class="block text-white hover:text-red-400 px-3 py-2 rounded-md text-base font-medium">Accueil</a>
				<a href="#" class="block text-white hover:text-red-400 px-3 py-2 rounded-md text-base font-medium">Formules Intérieurs</a>
				<a href="#" class="block text-white hover:text-red-400 px-3 py-2 rounded-md text-base font-medium">Formules Extérieurs</a>
				<a href="#" class="block text-white hover:text-red-400 px-3 py-2 rounded-md text-base font-medium">Encore plus</a>
				<a href="#" class="block text-white hover:text-red-400 px-3 py-2 rounded-md text-base font-medium">Galeries</a>
				<a href="#" class="block text-white hover:text-red-400 px-3 py-2 rounded-md text-base font-medium">Contact</a>
			</div>
		</div>


		<script>
			const btn = document.getElementById('mobile-menu-button');
const menu = document.getElementById('mobile-menu');
const iconOpen = btn.querySelector('svg.block');
const iconClose = btn.querySelector('svg.hidden');

btn.addEventListener('click', () => {
menu.classList.toggle('hidden');
iconOpen.classList.toggle('hidden');
iconClose.classList.toggle('hidden');
});
		</script>

		<main
			class="flex-grow">
			{# ✅ CONTENU DES PAGES #}
			{% block body %}{% endblock %}
		</main>


		{# Ajoute ça tout en bas du body, avant la balise </body> #}
		{# <svg id="cursor-svg" xmlns="http://www.w3.org/2000/svg"><ellipse id="cursor-ellipse" cx="0" cy="0" rx="10" ry="10" fill="#951333"/></svg> #}
		<footer class="navbar bg-gray-900 shadow-md text-white mt-auto">
			<div
				class="w-full flex flex-col md:flex-row items-center justify-between py-4">
				<!-- Logo vraiment à gauche -->
				<div class="mt-2 ml-4 md:ml-10">
					<img src="{{ asset('images/Logo-Charly-removebg-preview.webp') }}" alt="Logo" class="h-28 w-auto">
				</div>

				<!-- Liens bien centrés / à droite -->
				<div class="max-w-7xl w-full md:w-auto mx-auto md:mx-0 px-4 sm:px-6 lg:px-8 overflow-x-auto whitespace-nowrap flex justify-center md:justify-end items-center gap-x-4 text-sm md:text-lg font-medium mt-4 md:mt-0">
					<a href="#" class="text-white hover:text-red-500">Accueil</a>
					<span class="text-gray-400">|</span>
					<a href="#" class="text-white hover:text-red-500">Formules Intérieurs</a>
					<span class="text-gray-400">|</span>
					<a href="#" class="text-white hover:text-red-500">Formules Extérieurs</a>
					<span class="text-gray-400">|</span>
					<a href="#" class="text-white hover:text-red-500">Encore plus</a>
					<span class="text-gray-400">|</span>
					<a href="#" class="text-white hover:text-red-500">Galeries</a>
					<span class="text-gray-400">|</span>
					<a href="#" class="text-white hover:text-red-500">Contact</a>
					<span class="text-gray-400">|</span>
					<a href="#" class="text-white hover:text-red-500">Politique de confidentialité</a>
					<span class="text-gray-400">|</span>
					<a href="#" class="text-white hover:text-red-500">Mention légale</a>
				</div>
			</div>
		</footer>
		<svg id="cursor-svg" class="pointer-events-none fixed top-0 left-0 z-50" width="100%" height="100%">
  <circle id="small-circle" r="6" fill="#000" />
  <circle id="big-circle" r="20" fill="rgba(255,0,0,0.5)" />
</svg>

		{# ✅ JS via Webpack Encore #}
		{% block javascripts %}
			<script src="{{ asset('js/cursor.js') }}"></script>
			<script src="{{ asset('js/carousel.js') }}"></script>
			<script src="{{ asset('js/float-img.js') }}"></script>
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

	</body>
</html>
