		{# Ajoute ça tout en bas du body, avant la balise </body> #}
		<svg id="cursor-svg" xmlns="http://www.w3.org/2000/svg"><ellipse id="cursor-ellipse" cx="0" cy="0" rx="10" ry="10" fill="#007FFF"/></svg>

		<script>
			(() => {
const ellipse = document.getElementById('cursor-ellipse');

let posX = window.innerWidth / 2;
let posY = window.innerHeight / 2;

let prevX = posX;
let prevY = posY;

let lerpX = posX;
let lerpY = posY;

const lerpAmount = 0.15;

function lerp(a, b, n) {
return(1 - n) * a + n * b;
}

function animate() {
lerpX = lerp(lerpX, posX, lerpAmount);
lerpY = lerp(lerpY, posY, lerpAmount);

const dx = posX - prevX;
const dy = posY - prevY;

const angle = Math.atan2(dy, dx) * (180 / Math.PI);
const distance = Math.min(Math.sqrt(dx * dx + dy * dy), 100);

if (distance < 0.5) { // Cercle normal
ellipse.setAttribute('rx', 10);
ellipse.setAttribute('ry', 10);
ellipse.setAttribute('transform', `rotate(0, ${lerpX}, ${lerpY})`);
} else { // Goutte étirée
const stretchX = 10 + distance * 1.2;
const stretchY = 10 - distance * 0.8;
const newRy = Math.max(stretchY, 4);

ellipse.setAttribute('rx', stretchX);
ellipse.setAttribute('ry', newRy);
ellipse.setAttribute('transform', `rotate(${angle}, ${lerpX}, ${lerpY})`);
} ellipse.setAttribute('cx', lerpX);
ellipse.setAttribute('cy', lerpY);

prevX = posX;
prevY = posY;

requestAnimationFrame(animate);
}

window.addEventListener('mousemove', (e) => {
posX = e.clientX;
posY = e.clientY;
});

animate();
})();
		</script>
	</body>
